<%- include('partials/header', { user: user }) %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow soft-card">
      <div class="card-body">
        <h2 class="mb-3"><%= submitLabel %></h2>

        <% if (errors.length) { %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% errors.forEach(e => { %>
                <li><%= e.msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>

        <form action="<%= formAction %>" method="POST" novalidate>
          <div class="mb-3">
            <label class="form-label">Date</label>
            <input
              type="date"
              name="date"
              class="form-control"
              value="<%= entry.date || '' %>"
              required
            />
          </div>

          <div class="row">
            <div class="col-md-4 mb-3">
              <label class="form-label">Sleep (hours)</label>
              <input
                type="number"
                step="0.5"
                min="0"
                max="24"
                name="sleepHours"
                class="form-control"
                value="<%= entry.sleepHours ?? '' %>"
              />
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Water (cups)</label>
              <input
                type="number"
                min="0"
                max="50"
                name="waterCups"
                class="form-control"
                value="<%= entry.waterCups ?? '' %>"
              />
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Exercise (minutes)</label>
              <input
                type="number"
                min="0"
                max="600"
                name="exerciseMinutes"
                class="form-control"
                value="<%= entry.exerciseMinutes ?? '' %>"
              />
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Mood (1â€“10)</label>
            <input
              type="number"
              min="1"
              max="10"
              name="mood"
              class="form-control"
              value="<%= entry.mood ?? '' %>"
            />
          </div>

          <div class="mb-3">
            <label class="form-label">Notes (optional)</label>
            <textarea
              name="notes"
              rows="3"
              class="form-control"
            ><%= entry.notes || '' %></textarea>
          </div>

          <button class="btn btn-primary" type="submit"><%= submitLabel %></button>
          <a href="/entries" class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
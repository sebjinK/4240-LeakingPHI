<%- include('partials/header', { user: user }) %>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow soft-card">
        <div class="card-body">
          <h1 class="card-title mb-3">Fitness Buddy</h1>
          <p class="lead">
            A conversational-inspired wellness dashboard to help you track
            sleep, exercise, hydration, and mood — without wearables or complex apps.
          </p>
          <p>
            Create an account, log in, answer a few quick baseline questions,
            and start tracking your daily habits with simple forms
            (chat assistant coming later ✨).
          </p>

          <% if (!user) { %>
            <a href="/register" class="btn btn-primary me-2">Get Started</a>
            <a href="/login" class="btn btn-outline-secondary">I already have an account</a>
            <% } else { %>
              <a href="/dashboard" class="btn btn-success me-2">Go to Dashboard</a>
              <a href="/entries" class="btn btn-outline-secondary">View Your Entries</a>
              <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
<%- include('partials/header') %>

<div class="container">
    <h1>Prompt Engineer</h1>
    <form action="/prompt-engineer" method="POST">
        <h2>Initial Intake</h2>
        <div class="form-group">
            <label for="age">What is your age?</label>
            <input type="number" class="form-control" id="age" name="age" required>
        </div>
        <div class="form-group">
            <label for="gender">What is your gender?</label>
            <select class="form-control" id="gender" name="gender">
                <option>Male</option>
                <option>Female</option>
                <option>Non-binary</option>
                <option>Prefer not to say</option>
            </select>
        </div>
        <div class="form-group">
            <label for="height">What is your height?</label>
            <div class="input-group">
                <input type="number" class="form-control" id="height" name="height" required>
                <div class="input-group-append">
                    <select class="form-control" name="height_units">
                        <option>cm</option>
                        <option>in</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="weight">What is your weight?</label>
            <div class="input-group">
                <input type="number" class="form-control" id="weight" name="weight" required>
                <div class="input-group-append">
                    <select class="form-control" name="weight_units">
                        <option>kg</option>
                        <option>lbs</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="medical_conditions">Do you have any medical conditions we should be aware of?</label>
            <textarea class="form-control" id="medical_conditions" name="medical_conditions" rows="3"></textarea>
        </div>

        <h2>Lifestyle/Preferences</h2>
        <div class="form-group">
            <label for="difficulty">On a scale of 1-10 (1 being easy and 10 being quite hard), what difficulty/intensity would you like our suggestions to be?</label>
            <select class="form-control" id="difficulty" name="difficulty">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
            </select>
        </div>
        <div class="form-group">
            <label for="activity_level">How active are you currently?</label>
            <select class="form-control" id="activity_level" name="activity_level">
                <option>Sedentary</option>
                <option>Lightly Active</option>
                <option>Moderately Active</option>
                <option>Very Active</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exercise_enjoyment">What type of exercise do you enjoy most?</label>
            <select class="form-control" id="exercise_enjoyment" name="exercise_enjoyment">
                <option>Cardio</option>
                <option>Strength</option>
                <option>Flexibility</option>
                <option>Mixed</option>
                <option>Other</option>
            </select>
        </div>
        <div class="form-group">
            <label for="dietary_restrictions">Do you have any dietary preferences or restrictions?</label>
            <textarea class="form-control" id="dietary_restrictions" name="dietary_restrictions" rows="3"></textarea>
        </div>

        <h2>Goals</h2>
        <div class="form-group">
            <label for="primary_goal">What is your primary fitness goal?</label>
            <textarea class="form-control" id="primary_goal" name="primary_goal" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="short_term_goals">What are your short-term goals? (next 1-3 months)</label>
            <textarea class="form-control" id="short_term_goals" name="short_term_goals" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="long_term_goals">What are your long-term goals? (6â€“12 months or more)</label>
            <textarea class="form-control" id="long_term_goals" name="long_term_goals" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="days_per_week">How many days per week are you aiming to exercise?</label>
            <input type="number" class="form-control" id="days_per_week" name="days_per_week" min="0" max="7">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<%- include('partials/footer') %>

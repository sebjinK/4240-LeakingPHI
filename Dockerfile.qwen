FROM python:3.11-slim

WORKDIR /app

# system deps for compiling some Python packages (if needed)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# copy server code
COPY qwen_server.py /app/qwen_server.py
COPY requirements-qwen.txt /app/requirements-qwen.txt

# Install python deps
RUN pip install --no-cache-dir -r /app/requirements-qwen.txt

# Mount your local models directory into /app/models when running compose
EXPOSE 5005

CMD ["python3", "qwen_server.py"]
